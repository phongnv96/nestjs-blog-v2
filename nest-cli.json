{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      {
        "include": "languages/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "common/mail/templates/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "webpack": false,
    "deleteOutDir": true,
    "watchAssets": false
  }
}