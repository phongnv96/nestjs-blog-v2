{
    "compilerOptions": {
        "module": "Node16",
        "target": "esnext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true
        // "tsBuildInfoFile": ".tsbuildinfo",
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist", "*coverage", "logs", "data"]
}
